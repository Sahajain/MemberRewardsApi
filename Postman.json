{
  "info": {
    "_postman_id": "a1b2c3d4-e5f6-7890-1234-567890abcdef",
    "name": "Member Rewards API",
    "schema": "[https://schema.getpostman.com/json/collection/v2.1.0/collection.json](https://schema.getpostman.com/json/collection/v2.1.0/collection.json)"
  },
  "item": [
    {
      "name": "1. Register Member",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"mobileNumber\": \"1234567890\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/Members/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "Members",
            "register"
          ]
        }
      },
      "response": []
    },
    {
      "name": "2. Verify OTP & Get Token",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = JSON.parse(responseBody);",
              "pm.collectionVariables.set(\"jwt_token\", jsonData.token);",
              "pm.collectionVariables.set(\"member_id\", jsonData.memberId);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"mobileNumber\": \"1234567890\",\n    \"otp\": \"{{generated_otp}}\" \n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/Members/verify",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "Members",
            "verify"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Member Points",
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{jwt_token}}",
              "type": "string"
            }
          ]
        },
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/Points/{{member_id}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "Points",
            "{{member_id}}"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Add Points",
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{jwt_token}}",
              "type": "string"
            }
          ]
        },
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"memberId\": {{member_id}},\n    \"purchaseAmount\": 550\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/Points/add",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "Points",
            "add"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Redeem Coupon (500 pts)",
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{jwt_token}}",
              "type": "string"
            }
          ]
        },
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"memberId\": {{member_id}},\n    \"pointsToRedeem\": 500\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/Coupons/redeem",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "Coupons",
            "redeem"
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://localhost:7123"
    },
    {
      "key": "jwt_token",
      "value": ""
    },
    {
      "key": "member_id",
      "value": ""
    },
    {
      "key": "generated_otp",
      "value": ""
    }
  ]
}
